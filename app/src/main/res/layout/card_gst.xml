<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/left_card"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:gravity="center"
            android:background="@drawable/round_rectangle_background">
            <ImageView
                android:id="@+id/qr_code"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/left_card"
            android:gravity="end"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_gstin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_company"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_gstin"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:gravity="end"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_user_name"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:gravity="end"
            android:textColor="#000"
        android:textSize="18sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>


